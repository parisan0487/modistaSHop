{
    "compilerOptions": {
      "baseUrl": ".",                   
      "paths": {
        "@/*": ["src/*"],               
        "assets/*": ["public/assets/*"]  
      },
      "target": "ES2020",            
      "module": "ESNext",              
      "moduleResolution": "Node",     
      "allowJs": true,                
      "jsx": "preserve",                
      "resolveJsonModule": true,         
      "noEmit": true                    
    },
    "exclude": ["node_modules", ".next"]
  }
  